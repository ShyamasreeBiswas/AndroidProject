<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:background="@drawable/background">
    
    <include android:id="@+id/top_layout" layout="@layout/top_include"/>
    
     <TextView android:id="@+id/code_txt" android:layout_width="wrap_content" android:layout_height="40dp"
    android:text="@string/confirm_code" android:textColor="@color/black" android:textStyle="bold" android:textSize="15sp"
    android:layout_below="@id/top_layout" android:layout_marginTop="30dp" android:gravity="center"
    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    
    <TextView android:id="@+id/thank_txt" android:layout_width="wrap_content" android:layout_height="40dp"
    android:text="@string/thank" android:textColor="@color/black" android:textStyle="bold" android:textSize="15sp"
    android:layout_below="@id/code_txt" android:layout_marginTop="15dp" android:gravity="center"
    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    
   </RelativeLayout>